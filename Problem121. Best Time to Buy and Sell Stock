class Solution {
    public int maxProfit(int[] prices) {
        if(prices == null || prices.length == 0){
            return 0;
        }
        int l = prices.length;
        int[][] dp = new int[l][2]; 
        dp[0][0] -= prices[0];
        dp[0][1] = 0;
        for(int i = 1; i< l;i++){
            dp[i][0] = Math.max(dp[i-1][0],-prices[i]);
            dp[i][1] = Math.max(dp[i-1][0] + prices[i],dp[i-1][1]);
        }
        return dp[l-1][1];
    }
}
